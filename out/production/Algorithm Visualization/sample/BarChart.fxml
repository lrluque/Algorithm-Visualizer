<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox id="vBox" prefHeight="542.0" prefWidth="812.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <children>
    <AnchorPane id="anchorPane" fx:id="canvas" maxHeight="-1.0" maxWidth="-1.0" prefHeight="600.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
         <children>
            <BarChart id="barChart" fx:id="barChart" barGap="10.0" layoutX="71.0" layoutY="70.0" prefHeight="458.0" prefWidth="671.0" title="Insertion Sort Algorithm">
              <xAxis>
                <CategoryAxis id="arrayPositionAxis" fx:id="arrayPositionAxis" label="Array position" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis id="arrayValueAxis" fx:id="arrayValueAxis" label="Array value" side="LEFT" upperBound="9.0" />
              </yAxis>
            </BarChart>
            <Button id="newArrayButton" fx:id="newArrayButton" layoutX="40.0" layoutY="33.0" mnemonicParsing="false" onAction="#drawChart" text="New Array" />
            <Button id="startButton" fx:id="startButton" layoutX="146.0" layoutY="33.0" mnemonicParsing="false" onAction="#start" text="Start" />
         </children>
    </AnchorPane>
  </children>
</VBox>
